
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
   <div class="container">
         <h2 class="center-align">Cadastre-se</h2>


    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @validatable), label: false, placeholder: "Senha" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirme a sua senha" %>


    <div class="col s6">
    <%= f.button :submit, "Cadastre-se", class: "btn btn-large " %>
</div>
<% end %>

<%= render "devise/shared/links"  %>

</div>

